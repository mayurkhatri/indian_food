<h1>Recipe List : <%= unless @recipeable.blank? then @recipeable_name end %></h1>
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% unless @recipes.blank? %>
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.name %></td>
      <td><%= link_to 'Show', polymorphic_path([:admin, @recipeable, recipe])  %></td>
      <td><%= link_to 'Edit', edit_polymorphic_path([:admin, @recipeable, recipe]) %></td>
      <td><%= link_to 'Delete', polymorphic_path([:admin, @recipeable, recipe]), :method => :delete %></td>
    </tr>
  <% end %>
<% end %>
</table>

<br/>

<%= link_to 'New', new_polymorphic_path([:admin, @recipeable, Recipe.new]) %>
