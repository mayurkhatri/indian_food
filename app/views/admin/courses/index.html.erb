<h1>Admin Courses List</h1>
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% unless @courses.blank? %>
  <% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td>
      <% if can? :read, course %>
        <%= link_to t('generic.show'), admin_course_path(course) %>
      <% end %>
    </td>
    <td>
      <% if can? :update, course %>
        <%= link_to t('generic.edit_method'), edit_admin_course_path(course) %>
      <% end %>
    </td>
    <td>
      <% if can? :destroy, course %>
        <%= link_to t('generic.delete_method'), admin_course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
  <% end %>
<% end %>
</table>
<br/>

<% if can? :create, Course %>
  <%= link_to t('generic.new_method'), new_admin_course_path %>
<% end %>
