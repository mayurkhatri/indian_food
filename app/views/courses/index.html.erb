<h1>Courses List</h1>
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>        
  </tr>
<% unless @courses.blank? %>
  <% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= link_to 'Show', course_path(course) %></td>                  
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
<% end %>
</table>
