<h1>Courses List</h1>
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% unless @courses.blank? %>
  <% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td>
      <% if can? :read, course %>
        <%= link_to 'Show', course_path(course) %>
      <% end %>
    </td>
    <td>
      <% if can?, :update, course %>
        <%= link_to 'Edit', edit_course_path(course) %>
      <% end %>
    </td>
    <td>
      <% if can? :destroy, course %>
        <%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
  <% end %>
<% end %>
</table>
<br/>

<% if can? :create, Course %>
  <%= link_to 'New', new_course_path %>
<% end %>
